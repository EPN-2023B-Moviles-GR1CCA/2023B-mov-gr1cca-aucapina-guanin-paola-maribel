<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintCiudadEditar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ciudad_Editar">


    <TextView
        android:id="@+id/txtDatos"
        android:layout_width="237dp"
        android:layout_height="42dp"
        android:text="Ingresa los datos de ciudad: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/txtNombreCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nombre:"
        app:layout_constraintEnd_toEndOf="@+id/txtCodCiudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtCodCiudad"
        app:layout_constraintTop_toBottomOf="@+id/txtCodCiudad" />

    <TextView
        android:id="@+id/txtCodCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="CÃ³digo Ciudad:"
        app:layout_constraintEnd_toEndOf="@+id/txtDatos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtDatos"
        app:layout_constraintTop_toBottomOf="@+id/txtDatos" />

    <TextView
        android:id="@+id/txtSuperCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Superficie:"
        app:layout_constraintEnd_toEndOf="@+id/txtNombreCiudad"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="@+id/txtNombreCiudad"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreCiudad" />

    <TextView
        android:id="@+id/txtEsCapital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Es capital: "
        app:layout_constraintEnd_toEndOf="@+id/txtSeguridad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtSeguridad"
        app:layout_constraintTop_toBottomOf="@+id/txtSeguridad" />

    <TextView
        android:id="@+id/txtSeguridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Seguridad: "
        app:layout_constraintEnd_toEndOf="@+id/txtSuperCiudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtSuperCiudad"
        app:layout_constraintTop_toBottomOf="@+id/txtSuperCiudad" />
    <EditText
        android:id="@+id/etxCodCiudad"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="112"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/txtCodCiudad"
        app:layout_constraintStart_toEndOf="@+id/txtCodCiudad"
        app:layout_constraintTop_toTopOf="@+id/txtCodCiudad"
        app:layout_constraintVertical_bias="0.588" />

    <EditText
        android:id="@+id/etxSuperficieCiudad"
        android:layout_width="239dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="Ejm. 124.00"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/txtSuperCiudad"
        app:layout_constraintStart_toEndOf="@+id/txtSuperCiudad"
        app:layout_constraintTop_toTopOf="@+id/txtSuperCiudad"
        app:layout_constraintVertical_bias="0.461" />

    <EditText
        android:id="@+id/etxSeguridadCiudad"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Ejm: A"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/txtSeguridad"
        app:layout_constraintStart_toEndOf="@+id/txtSeguridad"
        app:layout_constraintTop_toTopOf="@+id/txtSeguridad"
        app:layout_constraintVertical_bias="0.433" />

    <Spinner
        android:id="@+id/spEsCiudad"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtEsCapital"
        app:layout_constraintStart_toEndOf="@+id/txtEsCapital"
        app:layout_constraintTop_toTopOf="@+id/txtEsCapital"
        app:layout_constraintVertical_bias="0.312" />

    <Button
        android:id="@+id/btnGuardarCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859" />

</androidx.constraintlayout.widget.ConstraintLayout>