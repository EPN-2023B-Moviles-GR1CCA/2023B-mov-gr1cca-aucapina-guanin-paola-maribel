<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_list_ciudades"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ciudad_Ver">

    <TextView
        android:id="@+id/txt_titulo_ciudades_ver10"
        android:layout_width="428dp"
        android:layout_height="64dp"
        android:background="@android:color/holo_orange_light"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/lv_ciudades_ver"
        android:layout_width="342dp"
        android:layout_height="398dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ciudad_crear" />

    <TextView
        android:id="@+id/txt_titulo_ciudades_ver"
        android:layout_width="428dp"
        android:layout_height="64dp"
        android:background="@android:color/holo_orange_light"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="     Listado de ciudades"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lv_ciudades_ver"
        app:layout_constraintStart_toStartOf="@+id/lv_ciudades_ver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_ciudad_crear"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_marginTop="56dp"
        android:background="@android:drawable/btn_default"
        android:text="Crear nueva ciudad"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_ciudades_ver" />
</androidx.constraintlayout.widget.ConstraintLayout>