<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BListView">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lv_list_view"
        android:layout_width="275dp"
        android:layout_height="276dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_añadir_list_view"
        app:layout_constraintEnd_toEndOf="@+id/btn_añadir_list_view"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/btn_añadir_list_view"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btn_añadir_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="560dp"
        tools:ignore="HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>