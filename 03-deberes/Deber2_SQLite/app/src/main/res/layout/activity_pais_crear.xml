<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pais_Crear">

  <TextView
      android:id="@+id/txt_titulo_ciudades_ver9"
      android:layout_width="413dp"
      android:layout_height="63dp"
      android:background="@android:color/holo_green_dark"
      android:paddingTop="10sp"
      android:paddingBottom="10sp"
      android:textAlignment="textStart"
      android:textAllCaps="false"
      android:textColor="@color/white"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/txt_titulo_ciudades_ver3"
      android:layout_width="413dp"
      android:layout_height="63dp"
      android:background="@android:color/holo_green_dark"
      android:paddingTop="10sp"
      android:paddingBottom="10sp"
      android:text="     Crear un país"
      android:textAlignment="textStart"
      android:textAllCaps="false"
      android:textColor="@color/white"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <EditText
      android:id="@+id/etxCodCiudad"
      android:layout_width="157dp"
      android:layout_height="53dp"
      android:layout_marginStart="24dp"
      android:ems="10"
      android:hint="112"
      android:inputType="number"
      app:layout_constraintBottom_toBottomOf="@+id/txtCodCiudad"
      app:layout_constraintStart_toEndOf="@+id/txtCodCiudad"
      app:layout_constraintTop_toTopOf="@+id/txtCodCiudad"
      app:layout_constraintVertical_bias="0.823" />

  <TextView
      android:id="@+id/txtEsCapital"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="84dp"
      android:text="Es miembro de la ONU: "
      app:layout_constraintEnd_toEndOf="@+id/txtSeguridad"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtSeguridad"
      app:layout_constraintTop_toBottomOf="@+id/txtSeguridad" />

  <TextView
      android:id="@+id/txtSeguridad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:text="Simbolo de la moneda local: "
      app:layout_constraintEnd_toEndOf="@+id/txtSuperCiudad"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtSuperCiudad"
      app:layout_constraintTop_toBottomOf="@+id/txtSuperCiudad" />

  <Button
      android:id="@+id/btnGuardarCiudad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@android:drawable/btn_default"
      android:text="Guardar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.885"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.85" />

  <TextView
      android:id="@+id/txtCodCiudad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:text="Código ISO:"
      app:layout_constraintEnd_toEndOf="@+id/txtDatos"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtDatos"
      app:layout_constraintTop_toBottomOf="@+id/txtDatos" />

  <TextView
      android:id="@+id/txtSuperCiudad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="64dp"
      android:text="PIB Nominal:"
      app:layout_constraintEnd_toEndOf="@+id/txtNombreCiudad"
      app:layout_constraintHorizontal_bias="0.269"
      app:layout_constraintStart_toStartOf="@+id/txtNombreCiudad"
      app:layout_constraintTop_toBottomOf="@+id/txtNombreCiudad" />

  <EditText
      android:id="@+id/etxSeguridadCiudad"
      android:layout_width="155dp"
      android:layout_height="49dp"
      android:layout_marginStart="20dp"
      android:ems="10"
      android:hint="Ejm: $"
      android:inputType="text"
      app:layout_constraintBottom_toBottomOf="@+id/txtSeguridad"
      app:layout_constraintStart_toEndOf="@+id/txtSeguridad"
      app:layout_constraintTop_toTopOf="@+id/txtSeguridad"
      app:layout_constraintVertical_bias="0.0" />

  <Spinner
      android:id="@+id/spEsCiudad"
      android:layout_width="171dp"
      android:layout_height="51dp"
      android:layout_marginStart="36dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtEsCapital"
      app:layout_constraintStart_toEndOf="@+id/txtEsCapital"
      app:layout_constraintTop_toTopOf="@+id/txtEsCapital"
      app:layout_constraintVertical_bias="0.0" />

  <EditText
      android:id="@+id/etxSuperficieCiudad"
      android:layout_width="239dp"
      android:layout_height="58dp"
      android:layout_marginStart="20dp"
      android:ems="10"
      android:hint="Ejm. 124.00"
      android:inputType="numberDecimal"
      app:layout_constraintBottom_toBottomOf="@+id/txtSuperCiudad"
      app:layout_constraintStart_toEndOf="@+id/txtSuperCiudad"
      app:layout_constraintTop_toTopOf="@+id/txtSuperCiudad"
      app:layout_constraintVertical_bias="0.333" />

  <TextView
      android:id="@+id/txtNombreCiudad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:text="Nombre:"
      app:layout_constraintEnd_toEndOf="@+id/txtCodCiudad"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtCodCiudad"
      app:layout_constraintTop_toBottomOf="@+id/txtCodCiudad" />

  <TextView
      android:id="@+id/txtDatos"
      android:layout_width="164dp"
      android:layout_height="27dp"
      android:text="Ingresa los datos del pais: "
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.105"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.1" />

  <EditText
      android:id="@+id/etxNombreCiudad"
      android:layout_width="262dp"
      android:layout_height="73dp"
      android:layout_marginStart="40dp"
      android:ems="10"
      android:hint="Ejm. Corea del Sur"
      android:inputType="text"
      app:layout_constraintBottom_toBottomOf="@+id/txtNombreCiudad"
      app:layout_constraintStart_toEndOf="@+id/txtNombreCiudad"
      app:layout_constraintTop_toTopOf="@+id/txtNombreCiudad" />

</androidx.constraintlayout.widget.ConstraintLayout>